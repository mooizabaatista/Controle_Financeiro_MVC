@model MBFinance.Domain.Entities.Categoria

<div class="container">
    <!-- Header -->
    <div class="row">
        <div class="col-12 text-center">
            <h3 class="font-weight-lighter">Exclusão de Categoria</h3>
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <!-- Informações sobre a categoria que será removida -->
            <table class="table table-sm table-hover text-center mt-3">
                <thead class="bg-dark text-light">
                    <tr>
                        <th scope="col">Nome <i class="fa fa-server ml-2" aria-hidden="true"></i></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">@Model.Nome</th>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <!-- Formulário de remoção -->
    <div class="row">
        <div class="col-3 mt-3">
            <!-- Ações -->
            <form asp-action="RemovePost" asp-controller="Categorias" method="post">
                <!-- Id hidden -->
                <input type="hidden" asp-for="@Model.Id" />
                <!-- Remover -->
                <button type="submit" value="Remover" class="btn btn-sm btn-danger">
                    Remover <i class="fa fa-trash" aria-hidden="true"></i>
                </button>
                <!-- Cancelar -->
                <a asp-action="Index" asp-controller="Home" class="btn btn-sm btn-dark">Cancelar <i class="fa fa-arrow-left ml-1" aria-hidden="true"></i></a>
            </form>
        </div>
    </div>
</div>